<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/nav.ejs') %>

    <div class="card mx-auto my-5" style="width: 25rem;">
        <div class="card-body">
            <form method='POST' action="/room/create">
                <div class="form-group mb-4">
                    <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Room" required autofocus list="room-list">
                    <datalist id="room-list">
                        <% rooms.forEach(room => { %>
                        <option value="<%= room.name %>"><%= room.name %></option>
                        <% }) %>
                    </datalist>
                </div>    
                <input class="btn my-3 btn-success w-100" type="submit" value="Create/Join Room">
            </form>
        </div>
    </div>

  </body>
</html>
